<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
	prism:ViewModelLocator.AutowireViewModel="True"
	x:Class="Farfetch.Views.HomeTabPage"
	Title="{Binding Title}"
	Icon="monkeyicon">
	<ContentPage.Icon>
		<OnPlatform
			x:TypeArguments="FileImageSource"
			iOS="monkeyicon" />
	</ContentPage.Icon>
	<StackLayout
		VerticalOptions="StartAndExpand"
		Spacing="0">
		<SearchBar
			Placeholder="Search here">
		</SearchBar>
		<StackLayout>
			<StackLayout
				BackgroundColor="#F5F5F5"
				VerticalOptions="StartAndExpand"
				Padding="15">
				<Label
					TextColor="#F78D87"
					Text="{Binding OfferTitle}"
					HorizontalTextAlignment="Center"
					FontSize="Medium"
					FontAttributes="Bold" />
			</StackLayout>
		</StackLayout>
		<RelativeLayout>
			<Image
				Source="{Binding OfferImageUri}"
				WidthRequest="400"
				HeightRequest="300"
				Aspect="AspectFill"
				Opacity="0.9" />
			<StackLayout
				WidthRequest="400"
				HeightRequest="300">
				<StackLayout
					VerticalOptions="CenterAndExpand"
					HorizontalOptions="Center">
					<Frame
						BackgroundColor="#992F2F2F"
						Padding="5, 13, 5, 13">
						<Label
							Text="{Binding OfferCategory}"
							TextColor="White"
							FontAttributes="Bold"
							FontSize="19" />
					</Frame>
				</StackLayout>
			</StackLayout>
		</RelativeLayout>
		<StackLayout
			VerticalOptions="CenterAndExpand">
			<Label
				Text="NEW IN TODAY"
				Font="18"
				FontAttributes="Bold"
				HorizontalOptions="Center" />
		</StackLayout>
		<StackLayout
			VerticalOptions="EndAndExpand">
			<StackLayout
				Spacing="1"
				Orientation="Horizontal">
				<Image
					Source="homescreenbackground.png"
					WidthRequest="125"
					HeightRequest="150"
					Aspect="AspectFill" />
				<Image
					Source="homescreenbackground.png"
					WidthRequest="125"
					HeightRequest="150"
					Aspect="AspectFill" />
				<Image
					Source="homescreenbackground.png"
					WidthRequest="125"
					HeightRequest="150"
					Aspect="AspectFill" />
			</StackLayout>
		</StackLayout>
	</StackLayout>
</ContentPage>